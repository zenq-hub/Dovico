@model GYMONE.Models.AllroleandUser
@{
    ViewBag.Title = "DisplayAllUserroles";
}

@using GridMvc.Html

<style>
    .legend
    {
        background: #d6e9c6 none repeat scroll 0 0;
        border-bottom: 0 none;
        border-radius: 4px;
        color: black;
        display: block;
        font-size: 1em;
        padding: 5px 8px;
        width: auto;
    }

    .selectStyle
    {
        width: 213px;
    }
</style>

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>


<div class="container">
    <div style="margin-top: 30px"></div>
    <fieldset>
        <legend class="legend">Display All User Roles</legend>



        @Html.Grid(Model.AllDetailsUserlist).Columns(columns =>
                    {

                        columns.Add(c => c.UserName).Titled("UserName").Filterable(true).Encoded(false)
        .Sanitized(false).SetWidth(50);
                        columns.Add(c => c.RoleName).Titled("RoleName").Filterable(true).Encoded(false)
     .Sanitized(false).SetWidth(50);
                    }).WithPaging(10)

    </fieldset>
</div>
