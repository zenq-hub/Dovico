@model GYMONE.Models.Role

@{
    ViewBag.Title = "RoleCreate";
}

<script src="~/Scripts/jquery-1.11.1.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<link href="~/Scripts/jquery-ui.min.css" rel="stylesheet" />
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .legend
    {
        background: #d6e9c6 none repeat scroll 0 0;
        border-bottom: 0 none;
        border-radius: 4px;
        color: black;
        display: block;
        font-size: 1em;
        padding: 5px 8px;
        width: auto;
    }

    .selectStyle
    {
        width: 213px;
    }
</style>



<div class="container">
    <div style="margin-top: 10px"></div>

    @using (Html.BeginForm())
    {
        
        <fieldset>
            <legend class="legend">Create Role</legend>
            <div style="margin-top: 5px"></div>
            <div class="row">
                <div class="col-md-3">
                    @Html.Label(" Role name")
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RoleName)
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
            </div>

                 <div style="margin-top: 5px"></div>

            <div class="row">
                <div class="col-md-12">
                    <input id="Submit" class="btn btn-success" type="submit" value="Save" />
                </div>
            </div>
            <div style="margin-top: 5px"></div>

        </fieldset>
        
        
           <div>
           @Html.ActionLink("Roles", "RoleIndex") | @Html.ActionLink("Add Role to User", "RoleAddToUser")
        </div>
        
        
    }
</div>
