@model GYMONE.Models.ChangepasswordVM
@{
    ViewBag.Title = "Changepassword";
}

<style>
    .legend
    {
        background: #d6e9c6 none repeat scroll 0 0;
        border-bottom: 0 none;
        border-radius: 4px;
        color: black;
        display: block;
        font-size: 1em;
        padding: 5px 8px;
        width: auto;
    }

    .selectStyle
    {
        width: 213px;
    }
</style>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>

@if (ViewBag.ResultMessage != null)
{
    <div class="alert alert-success" style="float: none;" role="alert">
        @ViewBag.ResultMessage
    </div>
}


@using (Html.BeginForm())
{
    <div class="container">
        <div style="margin-top: 30px"></div>
        <fieldset>
            <legend class="legend">Changepassword</legend>

            <div class="row">
                @Html.ValidationSummary(true)
                <div class="col-md-3">New Password</div>
                <div class="col-md-3">
                    @Html.PasswordFor(m => m.Newpassword, new { @class = "form-control" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Newpassword)
                </div>

                <div class="col-md-3">
                </div>
            </div>
            <div style="margin-top: 5px"></div>

            <div class="row">
                <div class="col-md-3">Old Password</div>
                <div class="col-md-3">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                    <br />
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </div>

                <div class="col-md-3">
                </div>
            </div>
            <div style="margin-top: 5px"></div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-success" value="Submit" />
                </div>
            </div>
        </fieldset>
    </div>
}
