@model GYMONE.Models.PlanMasterDTO

@{
    ViewBag.Title = "Edit";
}


<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/bootstrap/js/bootstrap.min.js"></script>




<style>
    .legend
    {
        background: #d6e9c6 none repeat scroll 0 0;
        border-bottom: 0 none;
        border-radius: 4px;
        color: black;
        display: block;
        font-size: 1em;
        padding: 5px 8px;
        width: auto;
    }

    .selectStyle
    {
        width: 213px;
    }
</style>
<script type="text/javascript">
    $.noConflict();
</script>



<div class="container">
    <div style="margin-top: 10px"></div>


    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend class="legend">PlanMasterDTO</legend>
            <div class="row">
                <div class="col-md-3">
                    @Html.HiddenFor(model => model.PlanID)
                    @Html.LabelFor(model => model.PlanName)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.PlanName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PlanName)
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.SchemeID)
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(m => m.SchemeID, new SelectList(Model.ListScheme, "SchemeID", "SchemeName"), new { @class = "form-control" })
                    @Html.ValidationMessage("SchemeMessage")
                </div>
            </div>


            <div style="margin-top: 5px"></div>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.PlanAmount)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.PlanAmount, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PlanAmount)
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.ServiceTax)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.ServiceTax, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ServiceTax)
                </div>
            </div>

            <div style="margin-top: 5px"></div>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.PeriodID)
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(m => m.PeriodID, new SelectList(Model.ListofPeriod, "Value", "Text"), new { @class = "form-control" })
                    @Html.ValidationMessage("PeriodMessage")
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-success"  name="actionType" value="Update" />
                    <input id="Cancel" class="btn btn-success" type="submit" name="actionType" value="Cancel" />
                </div>
            </div>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
